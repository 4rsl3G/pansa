<header class="nav-blur">
  <div class="navShell">
    <div class="navRowTop">
      <a href="/?lang=<%= lang %>" class="brand">
        <span class="brandMark"><i class="ri-play-circle-line"></i></span>
        <span class="brandTxt">
          <span class="brandName">PanStream</span>
          <span class="brandSub">streaming drama china gratis</span>
        </span>
      </a>

      <div class="navActions">
        <div class="langWrap">
          <button class="pill pillTight" aria-label="Language">
            <i class="ri-translate-2"></i>
            <span class="pillTxt"><%= lang %></span>
            <i class="ri-arrow-down-s-line"></i>
          </button>
          <div class="langMenu">
            <% (langs || []).forEach(l => { %>
              <a class="langItem" href="?lang=<%= l.code %>">
                <div class="text-sm font-semibold"><%= l.localName %></div>
                <div class="text-xs text-zinc-400"><%= l.name %> • <%= l.code %></div>
              </a>
            <% }) %>
          </div>
        </div>

        <button id="btnPulse" class="pill pillTight" title="Pulse UI">
          <i class="ri-sparkling-line"></i>
        </button>
      </div>
    </div>

    <div class="navRowBottom">
      <form class="navSearch" action="/search" method="GET">
        <input type="hidden" name="lang" value="<%= lang %>"/>
        <div class="searchShell">
          <i class="ri-search-2-line searchIcon"></i>
          <input name="q" value="<%= q || '' %>" placeholder="Cari judul… (contoh: love)" class="searchInput" />
          <button class="searchBtn" type="submit">Go</button>
        </div>
      </form>
    </div>
  </div>
</header>
